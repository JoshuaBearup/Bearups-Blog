---
// Search Component using Pagefind's Default UI
// Styled to match the design system

interface Props {
	placeholder?: string;
	showSubResults?: boolean;
	showImages?: boolean;
	excerptLength?: number;
	resetStyles?: boolean;
	class?: string;
}

const {
	placeholder = 'Search articles...',
	showSubResults = true,
	showImages = false,
	excerptLength = 15,
	resetStyles = false,
	class: className = '',
} = Astro.props;
---

<div class={`search-wrapper ${className}`}>
	<div id="pagefind-search"></div>
</div>

<style>
	.search-wrapper {
		width: 100%;
	}

	/* Pagefind UI Customization using CSS custom properties */
	:root {
		--pagefind-ui-primary: var(--accent);
		--pagefind-ui-text: var(--text-primary);
		--pagefind-ui-background: var(--bg-primary);
		--pagefind-ui-border: var(--border-subtle);
		--pagefind-ui-border-width: 1px;
		--pagefind-ui-border-radius: var(--radius-md);
		--pagefind-ui-font: "Atkinson", -apple-system, BlinkMacSystemFont, sans-serif;
		--pagefind-ui-scale: 1;
	}

	/* Search input styling */
	:global(.pagefind-ui__search-input) {
		background-color: var(--bg-secondary) !important;
		color: var(--text-primary) !important;
		border-color: var(--border-default) !important;
		font-size: var(--text-lg) !important;
		padding: var(--space-4) var(--space-6) !important;
		border-radius: var(--radius-lg) !important;
		width: 100% !important;
		height: auto !important;
	}

	:global(.pagefind-ui__search-input:focus) {
		border-color: var(--accent) !important;
		outline: 2px solid var(--accent) !important;
		outline-offset: 2px !important;
		box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1) !important;
	}

	[data-theme="dark"] :global(.pagefind-ui__search-input:focus) {
		box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.15) !important;
	}

	/* Clear button */
	:global(.pagefind-ui__search-clear) {
		background-color: var(--bg-tertiary) !important;
		color: var(--text-secondary) !important;
		border-radius: var(--radius-md) !important;
		padding: var(--space-2) var(--space-3) !important;
		font-size: var(--text-sm) !important;
	}

	:global(.pagefind-ui__search-clear:hover) {
		background-color: var(--bg-secondary) !important;
		color: var(--text-primary) !important;
	}

	/* Status message */
	:global(.pagefind-ui__message) {
		color: var(--text-tertiary) !important;
		font-size: var(--text-sm) !important;
		padding: var(--space-3) 0 !important;
	}

	/* Search results */
	:global(.pagefind-ui__results) {
		padding: var(--space-4) 0 !important;
	}

	:global(.pagefind-ui__result) {
		border-bottom: 1px solid var(--border-subtle) !important;
		padding: var(--space-4) 0 !important;
	}

	:global(.pagefind-ui__result:last-child) {
		border-bottom: none !important;
	}

	/* Result link */
	:global(.pagefind-ui__result-link) {
		color: var(--accent) !important;
		font-size: var(--text-xl) !important;
		font-weight: 600 !important;
		text-decoration: none !important;
	}

	:global(.pagefind-ui__result-link:hover) {
		color: var(--accent-hover) !important;
		text-decoration: underline !important;
	}

	/* Result excerpt */
	:global(.pagefind-ui__result-excerpt) {
		color: var(--text-secondary) !important;
		font-size: var(--text-base) !important;
		line-height: 1.6 !important;
		margin-top: var(--space-2) !important;
	}

	/* Highlight in excerpts */
	:global(.pagefind-ui__result-excerpt mark) {
		background-color: rgba(37, 99, 235, 0.2) !important;
		color: var(--text-primary) !important;
		padding: 0 2px !important;
		border-radius: var(--radius-sm) !important;
	}

	[data-theme="dark"] :global(.pagefind-ui__result-excerpt mark) {
		background-color: rgba(96, 165, 250, 0.3) !important;
		color: var(--text-primary) !important;
	}

	/* Load more button */
	:global(.pagefind-ui__button) {
		background-color: var(--accent) !important;
		color: white !important;
		border: none !important;
		font-weight: 600 !important;
		padding: var(--space-3) var(--space-6) !important;
		border-radius: var(--radius-md) !important;
		margin-top: var(--space-4) !important;
		cursor: pointer !important;
		transition: background-color var(--transition-fast) !important;
	}

	:global(.pagefind-ui__button:hover) {
		background-color: var(--accent-hover) !important;
	}

	/* Filters panel */
	:global(.pagefind-ui__filter-panel) {
		border-color: var(--border-subtle) !important;
		background-color: var(--bg-secondary) !important;
		border-radius: var(--radius-lg) !important;
		padding: var(--space-4) !important;
	}

	:global(.pagefind-ui__filter-name) {
		color: var(--text-primary) !important;
		font-weight: 600 !important;
		font-size: var(--text-sm) !important;
	}

	:global(.pagefind-ui__filter-value) {
		color: var(--text-secondary) !important;
		font-size: var(--text-sm) !important;
	}

	:global(.pagefind-ui__filter-checkbox) {
		accent-color: var(--accent) !important;
	}

	/* Sub results */
	:global(.pagefind-ui__result-nested) {
		margin-left: var(--space-4) !important;
		padding-left: var(--space-4) !important;
		border-left: 2px solid var(--border-subtle) !important;
	}

	/* Hidden label for accessibility */
	:global(.pagefind-ui__search-label) {
		position: absolute !important;
		width: 1px !important;
		height: 1px !important;
		padding: 0 !important;
		margin: -1px !important;
		overflow: hidden !important;
		clip: rect(0, 0, 0, 0) !important;
		white-space: nowrap !important;
		border: 0 !important;
	}

	/* Form element */
	:global(.pagefind-ui__form) {
		position: relative !important;
	}

	/* Drawer button for filters */
	:global(.pagefind-ui__drawer-button) {
		color: var(--accent) !important;
		font-weight: 600 !important;
	}

	/* Empty state */
	:global(.pagefind-ui__results-area:empty::before) {
		content: 'Start typing to search...';
		color: var(--text-tertiary);
		display: block;
		text-align: center;
		padding: var(--space-8) 0;
	}
</style>

<script>
	// Load Pagefind UI when component is mounted
	(async function initSearch() {
		const searchContainer = document.getElementById('pagefind-search');
		if (!searchContainer) return;

		// Check if Pagefind is available (production build only)
		try {
			const { PagefindUI } = await import('/pagefind/pagefind-ui.js');
			new PagefindUI({
				element: '#pagefind-search',
				showSubResults: true,
				showImages: false,
				excerptLength: 15,
				resetStyles: false,
			});
		} catch (e) {
			// Development mode - show placeholder
			searchContainer.innerHTML = `
				<div style="
					padding: var(--space-8);
					text-align: center;
					color: var(--text-tertiary);
					border: 2px dashed var(--border-subtle);
					border-radius: var(--radius-lg);
				">
					<p style="margin: 0 0 var(--space-2) 0; font-weight: 600;">üîç Search Available After Build</p>
					<p style="margin: 0; font-size: var(--text-sm);">Run <code>npm run build</code> to enable search functionality.</p>
				</div>
			`;
		}
	})();
</script>