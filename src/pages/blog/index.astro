---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import CategoryBadge from '../../components/CategoryBadge.astro';
import TagsList from '../../components/TagsList.astro';
import Search from '../../components/Search.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { CATEGORIES } from '../../content.config';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Get unique tags from all posts
const allTags = [...new Set(posts.flatMap(post => post.data.tags || []))].slice(0, 10);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: var(--space-8) var(--space-4);
			}

			/* Search Section */
			.search-section {
				margin-bottom: var(--space-8);
				text-align: center;
			}

			.search-section h1 {
				font-size: var(--text-3xl);
				margin-bottom: var(--space-2);
				color: var(--text-primary);
			}

			.search-section p {
				color: var(--text-secondary);
				margin-bottom: var(--space-6);
			}

			.search-container {
				max-width: 600px;
				margin: 0 auto;
			}

			/* Category Filters */
			.category-section {
				margin-bottom: var(--space-8);
				padding: var(--space-6);
				background-color: var(--bg-secondary);
				border-radius: var(--radius-lg);
				border: 1px solid var(--border-subtle);
			}

			.category-section h2 {
				font-size: var(--text-sm);
				text-transform: uppercase;
				letter-spacing: 0.05em;
				color: var(--text-tertiary);
				margin-bottom: var(--space-4);
			}

			.category-filters {
				display: flex;
				flex-wrap: wrap;
				gap: var(--space-3);
			}

			.category-filter {
				display: inline-flex;
				align-items: center;
				padding: var(--space-2) var(--space-4);
				background-color: var(--bg-primary);
				color: var(--text-secondary);
				font-size: var(--text-sm);
				font-weight: 500;
				border-radius: var(--radius-full);
				text-decoration: none;
				transition: all var(--transition-fast);
				border: 1px solid var(--border-subtle);
			}

			.category-filter:hover {
				background-color: var(--accent);
				color: white;
				border-color: var(--accent);
				text-decoration: none;
			}

			.category-filter.active {
				background-color: var(--accent);
				color: white;
				border-color: var(--accent);
			}

			/* Posts Grid */
			.posts-section {
				margin-top: var(--space-8);
			}

			.posts-section h2 {
				font-size: var(--text-xl);
				color: var(--text-primary);
				margin-bottom: var(--space-6);
			}

			.posts-grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: var(--space-8);
				list-style: none;
				margin: 0;
				padding: 0;
			}

			.post-card {
				background-color: var(--bg-secondary);
				border-radius: var(--radius-lg);
				overflow: hidden;
				transition: transform var(--transition-fast), box-shadow var(--transition-fast);
				border: 1px solid var(--border-subtle);
			}

			.post-card:hover {
				transform: translateY(-4px);
				box-shadow: var(--shadow-lg);
			}

			.post-card a {
				display: block;
				text-decoration: none;
				color: inherit;
			}

			.post-card a:hover {
				text-decoration: none;
			}

			.post-image {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-bottom: 1px solid var(--border-subtle);
			}

			.post-content {
				padding: var(--space-5);
			}

			.post-meta {
				display: flex;
				align-items: center;
				gap: var(--space-3);
				margin-bottom: var(--space-3);
				flex-wrap: wrap;
			}

			.post-date {
				font-size: var(--text-sm);
				color: var(--text-tertiary);
			}

			.post-title {
				font-size: var(--text-xl);
				font-weight: 700;
				color: var(--text-primary);
				margin: 0 0 var(--space-3) 0;
				line-height: 1.3;
			}

			.post-description {
				font-size: var(--text-base);
				color: var(--text-secondary);
				margin: 0 0 var(--space-4) 0;
				line-height: 1.5;
				display: -webkit-box;
				-webkit-line-clamp: 2;
				-webkit-box-orient: vertical;
				overflow: hidden;
			}

			.post-tags {
				margin-top: var(--space-3);
			}

			/* Featured Post (First Item) */
			.posts-grid li:first-child {
				grid-column: 1 / -1;
			}

			.posts-grid li:first-child .post-card {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 0;
			}

			.posts-grid li:first-child .post-image {
				height: 100%;
				min-height: 300px;
				border-bottom: none;
				border-right: 1px solid var(--border-subtle);
			}

			.posts-grid li:first-child .post-content {
				display: flex;
				flex-direction: column;
				justify-content: center;
				padding: var(--space-8);
			}

			.posts-grid li:first-child .post-title {
				font-size: var(--text-3xl);
			}

			.posts-grid li:first-child .post-description {
				font-size: var(--text-lg);
				-webkit-line-clamp: 3;
			}

			/* Responsive */
			@media (max-width: 768px) {
				main {
					padding: var(--space-4) var(--space-3);
				}

				.posts-grid {
					grid-template-columns: 1fr;
					gap: var(--space-6);
				}

				.posts-grid li:first-child .post-card {
					grid-template-columns: 1fr;
				}

				.posts-grid li:first-child .post-image {
					height: 200px;
					border-right: none;
					border-bottom: 1px solid var(--border-subtle);
				}

				.posts-grid li:first-child .post-title {
					font-size: var(--text-xl);
				}

				.posts-grid li:first-child .post-description {
					font-size: var(--text-base);
				}

				.category-filters {
					gap: var(--space-2);
				}

				.category-filter {
					padding: var(--space-1) var(--space-3);
					font-size: var(--text-xs);
				}
			}

			/* No posts message */
			.no-posts {
				text-align: center;
				padding: var(--space-12);
				color: var(--text-tertiary);
			}

			.no-posts h3 {
				color: var(--text-secondary);
				margin-bottom: var(--space-2);
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<!-- Search Section -->
			<section class="search-section">
				<h1>Explore Articles</h1>
				<p>Search through all blog posts or browse by category.</p>
				<div class="search-container">
					<Search />
				</div>
			</section>

			<!-- Category Filters -->
			<section class="category-section">
				<h2>Filter by Category</h2>
				<div class="category-filters">
					{CATEGORIES.map((category) => (
						<a 
							href={`/blog/category/${category.toLowerCase().replace(/\s+/g, '-')}`}
							class="category-filter"
						>
							{category}
						</a>
					))}
				</div>
			</section>

			<!-- Posts Grid -->
			<section class="posts-section">
				<h2>Latest Posts</h2>
				{posts.length > 0 ? (
					<ul class="posts-grid">
						{posts.map((post) => (
							<li>
								<article class="post-card">
									<a href={`/blog/${post.id}/`}>
										{post.data.heroImage && (
											<img 
												width={720} 
												height={360} 
												src={post.data.heroImage} 
												alt={post.data.title}
												class="post-image"
											/>
										)}
										<div class="post-content">
											<div class="post-meta">
												{post.data.category && (
													<CategoryBadge category={post.data.category} />
												)}
												<span class="post-date">
													<FormattedDate date={post.data.pubDate} />
												</span>
											</div>
											<h3 class="post-title">{post.data.title}</h3>
											{post.data.description && (
												<p class="post-description">{post.data.description}</p>
											)}
											{post.data.tags && post.data.tags.length > 0 && (
												<div class="post-tags">
													<TagsList tags={post.data.tags.slice(0, 3)} />
												</div>
											)}
										</div>
									</a>
								</article>
							</li>
						))}
					</ul>
				) : (
					<div class="no-posts">
						<h3>No posts yet</h3>
						<p>Check back soon for new content!</p>
					</div>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>