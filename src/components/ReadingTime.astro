---
interface Props {
	minutes: number;
}

const { minutes } = Astro.props;

// Round to nearest 5 minutes for "5-minute read" style
const roundedMinutes = Math.max(1, Math.ceil(minutes / 5) * 5);
---

<span class="reading-time" title={`${minutes} minute read`}>
	<svg class="reading-time__icon" viewBox="0 0 24 24" width="16" height="16" aria-hidden="true">
		<circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
		<path fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" d="M12 6v6l4 2"/>
	</svg>
	<span class="reading-time__text">{roundedMinutes}-minute read</span>
</span>

<style>
	.reading-time {
		display: inline-flex;
		align-items: center;
		gap: var(--space-2);
		color: var(--text-tertiary);
		font-size: var(--text-sm);
		font-weight: 500;
	}

	.reading-time__icon {
		opacity: 0.7;
	}

	.reading-time__text {
		white-space: nowrap;
	}
</style>
