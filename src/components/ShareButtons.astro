---
import { SITE_URL } from '../consts';

interface Props {
	title: string;
	url?: string;
	description?: string;
}

const { title, url, description } = Astro.props;
const shareUrl = url || Astro.url.href;
const shareText = encodeURIComponent(title);
const shareDesc = description ? encodeURIComponent(description) : '';

// Social share URLs
const twitterUrl = `https://twitter.com/intent/tweet?text=${shareText}&url=${encodeURIComponent(shareUrl)}`;
const linkedinUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(shareUrl)}`;
---

<div class="share-buttons">
	<span class="share-label">Share:</span>
	<div class="share-actions">
		<a 
			href={twitterUrl} 
			target="_blank" 
			rel="noopener noreferrer"
			class="share-button share-button--twitter"
			aria-label="Share on X (Twitter)"
			title="Share on X"
		>
			<svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
				<path fill="currentColor" d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
			</svg>
		</a>
		<a 
			href={linkedinUrl} 
			target="_blank" 
			rel="noopener noreferrer"
			class="share-button share-button--linkedin"
			aria-label="Share on LinkedIn"
			title="Share on LinkedIn"
		>
			<svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
				<path fill="currentColor" d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
			</svg>
		</a>
		<button 
			class="share-button share-button--copy"
			aria-label="Copy link to clipboard"
			title="Copy link"
			data-url={shareUrl}
		>
			<svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
				<path fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
				<path fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
			</svg>
			<span class="copy-feedback" aria-live="polite">
				<svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
					<path fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M20 6L9 17l-5-5"/>
				</svg>
				Copied!
			</span>
		</button>
	</div>
</div>

<style>
	.share-buttons {
		display: flex;
		align-items: center;
		gap: var(--space-3);
		padding: var(--space-4) 0;
		border-top: 1px solid var(--border-subtle);
		margin-top: var(--space-8);
	}

	.share-label {
		font-size: var(--text-sm);
		color: var(--text-tertiary);
		font-weight: 500;
	}

	.share-actions {
		display: flex;
		gap: var(--space-2);
	}

	.share-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		border-radius: var(--radius-md);
		background: var(--bg-secondary);
		border: 1px solid var(--border-subtle);
		color: var(--text-secondary);
		cursor: pointer;
		transition: all var(--transition-fast);
		text-decoration: none;
		position: relative;
	}

	.share-button:hover {
		background: var(--bg-tertiary);
		border-color: var(--border-default);
		color: var(--text-primary);
		text-decoration: none;
	}

	.share-button:focus-visible {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
	}

	.share-button--twitter:hover {
		color: #000;
		background: #e7e7e7;
	}

	[data-theme="dark"] .share-button--twitter:hover {
		color: #fff;
		background: #333;
	}

	.share-button--linkedin:hover {
		color: #0a66c2;
		background: #e6f0fa;
	}

	[data-theme="dark"] .share-button--linkedin:hover {
		color: #60a5fa;
		background: #1e3a5f;
	}

	.copy-feedback {
		display: none;
		align-items: center;
		gap: var(--space-1);
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		font-size: var(--text-xs);
		font-weight: 600;
		color: var(--success);
		white-space: nowrap;
		background: var(--bg-primary);
		padding: var(--space-1) var(--space-2);
		border-radius: var(--radius-sm);
	}

	.share-button--copy.copied .copy-feedback {
		display: inline-flex;
	}

	.share-button--copy.copied svg:not(.copy-feedback svg) {
		opacity: 0;
	}

	@media (max-width: 720px) {
		.share-buttons {
			flex-direction: column;
			align-items: flex-start;
			gap: var(--space-2);
		}
	}
</style>

<script>
	// Handle copy to clipboard
	document.querySelectorAll('.share-button--copy').forEach(button => {
		button.addEventListener('click', async () => {
			const url = button.getAttribute('data-url');
			if (!url) return;

			try {
				await navigator.clipboard.writeText(url);
				button.classList.add('copied');
				
				// Reset after 2 seconds
				setTimeout(() => {
					button.classList.remove('copied');
				}, 2000);
			} catch (err) {
				console.error('Failed to copy:', err);
				// Fallback: show the URL in an alert
				alert('Link: ' + url);
			}
		});
	});
</script>
